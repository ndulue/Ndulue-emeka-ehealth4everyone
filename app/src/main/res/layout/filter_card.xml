<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="9dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/card_bg"
            android:id="@+id/card_layout"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/filter_date_text"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Date Range: "
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/filter_date"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/filter_date_text"
                        android:text=""
                        android:textSize="16sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:id="@+id/filter_gender_text"
                        android:textStyle="bold"
                        android:text="Gender: "
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_toEndOf="@id/filter_gender_text"
                        android:textStyle="bold"
                        android:id="@+id/filter_gender"
                        android:text=""
                        android:textSize="16sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:id="@+id/filter_country_text"
                        android:text="Country: "
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/filter_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/filter_country_text"
                        android:layout_alignParentEnd="false"
                        android:text=""
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:id="@+id/filter_color_text"
                        android:text="Color: "
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/filter_color"
                        android:layout_toEndOf="@id/filter_color_text"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:text=""
                        android:textSize="16sp"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>