<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/card_layout"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Full Name:"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:id="@+id/full_name_co"
                        android:layout_alignParentEnd="true"
                        android:text="Ndulue Emeka Philip"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Email:"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/email_co"
                        android:textStyle="bold"
                        android:text="Fidelity bank"
                        android:textSize="20sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Country:"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/country_co"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:text="6172311466"
                        android:textSize="20sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Car Make, Color and year:"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/car_details_co"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:text="#89000"
                        android:textSize="20sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Gender:"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gender_co"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:text="$90"
                        android:textSize="20sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Job Title:"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/job_title_co"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:text="Amazon"
                        android:textSize="20sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLength="55"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Bio:"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bio_co"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:text="98372468736247"
                        android:textSize="20sp"/>

                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>